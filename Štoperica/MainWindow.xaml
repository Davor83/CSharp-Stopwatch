<Window x:Class="Stopwatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopwatch"
        mc:Ignorable="d"
        Title="STOPWATCH" Height="500" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="1,0" StartPoint="0,1">
            <GradientStop Color="#FF3E729A" Offset="0.2"/>
            <GradientStop Color="#FF215D71" Offset="0.5"/>
            <GradientStop Color="#FF2BB5E4" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid  >
        <Grid.RowDefinitions >
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <TextBlock  Name ="Sat" Grid.Row="0" Text="00:00:00" Margin="5"
                       FontSize="30" FontWeight="SemiBold"  VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="LawnGreen" />
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <Border    Grid.Row="1" CornerRadius="50"  Width="450" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#FFEF1515">
            <Border.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,1">
                    <GradientStop Color="#FF599AB5" Offset="0.5"/>
                    <GradientStop Color="#FF1D91AF" Offset="0.9"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Name="TimeDisplay" Text="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60"  >
            </TextBlock>
        </Border>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal"  Height="80" Margin="0,0,0,5" >
            <Button Click="Start_Click"  Content="Start" FontSize="20" Background="Green" Foreground="AntiqueWhite" Margin="30,10" Height="40" Width="100" VerticalAlignment="Bottom"/>
            <Button Click="Stop_Click" Content="Stop" FontSize="20"  Background="Red" Foreground="AntiqueWhite" Margin="30,10" Height="40" Width="100" VerticalAlignment="Bottom" />
            <Button Click="Reset_Click" Content="Reset" FontSize="20"  Margin="30,10" Height="40" Width="100" VerticalAlignment="Bottom"/>
        </StackPanel>




    </Grid>
</Window>
